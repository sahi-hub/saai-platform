{
  "tenantId": "client1",
  "actions": {
    "search_products": {
      "enabled": true,
      "description": "Search products by query text",
      "handler": "commerce.search"
    },
    "compare_products": {
      "enabled": true,
      "description": "Compare two or more products side by side, showing features, prices, and pros/cons",
      "handler": "commerce.compareProducts"
    },
    "add_to_cart": {
      "enabled": true,
      "description": "Add a single product to cart",
      "handler": "commerce.addToCart"
    },
    "add_multiple_to_cart": {
      "enabled": true,
      "description": "Add multiple products to cart at once",
      "handler": "commerce.addMultipleToCart"
    },
    "add_outfit_to_cart": {
      "enabled": true,
      "description": "Add a complete outfit (shirt + pant + shoes) to cart",
      "handler": "commerce.addOutfitToCart"
    },
    "remove_from_cart": {
      "enabled": true,
      "description": "Remove a product from cart",
      "handler": "commerce.removeFromCart"
    },
    "checkout": {
      "enabled": true,
      "description": "Create an order from cart",
      "handler": "commerce.checkout"
    },
    "view_cart": {
      "enabled": true,
      "description": "View current cart contents and summary",
      "handler": "commerce.viewCart"
    },
    "view_orders": {
      "enabled": true,
      "description": "View order history",
      "handler": "commerce.viewOrders"
    },
    "get_order_status": {
      "enabled": true,
      "description": "Get status of a specific order",
      "handler": "commerce.getOrderStatus"
    },
    "cancel_order": {
      "enabled": true,
      "description": "Cancel an existing order",
      "handler": "commerce.cancelOrder"
    },
    "recommend_products": {
      "enabled": true,
      "description": "Recommend products based on query and preferences",
      "handler": "recommender.recommend"
    },
    "recommend_outfit": {
      "enabled": true,
      "description": "Recommend a full outfit (shirt + pant + shoe)",
      "handler": "recommender.outfit"
    }
  }
}
